<!DOCTYPE html>
<html>
  <head>
    <title>WElection</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
        <div class="notice"><%= flash[:notice] %></div>
    <% end %>
    <% if !session[:login] %>
      <a href = '/db/loginpage'>[로그인]</a>
    <% else %>
      <a href = '/db/loginpage'>[로그아웃]</a>
    <% end %>
    <%= yield %>
  </body>
</html>
